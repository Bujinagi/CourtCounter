<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1"
    tools:context="br.courtcounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#0E2C37"
            android:textColor="#00B2E2"
            android:gravity="center"
            android:id="@+id/team1"
            android:hint="Team 1"
            android:imeOptions = "actionDone"
            android:inputType="text"
            android:layout_weight="2"
            android:textAppearance="?android:textAppearanceLarge"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:background="#003366"
                android:gravity="center"
                android:textColor="#009999"
                android:layout_weight="1"
                android:text="Score"
                android:textAppearance="?android:textAppearanceLarge"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:background="#A6A6E4"
                android:gravity="center"
                android:id="@+id/count"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text="00"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceLarge"/>

            </LinearLayout>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="+1"
            android:onClick="clickFunction1"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="-1"
            android:onClick="clickFunction4"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#3A3B3C"
            android:textColor="#A8ACAD"
            android:gravity="center"
            android:layout_weight="2"
            android:id="@+id/team2"
            android:hint="Team 2"
            android:imeOptions = "actionDone"
            android:inputType="text"
            android:textAppearance="?android:textAppearanceLarge"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:background="#9C9C9D"
                android:gravity="center"
                android:textColor="#DDDEDE"
                android:layout_weight="1"
                android:text="Score"
                android:textAppearance="?android:textAppearanceLarge"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:background="#F2F3F3"
                android:gravity="center"
                android:id="@+id/count2"
                android:layout_weight="1"
                android:textColor="#495159"
                android:text="00"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceLarge"/>

        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="+1"
            android:layout_marginTop="0dp"
            android:onClick="clickFunction2"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="-1"
            android:onClick="clickFunction5"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Frick Trump"
            android:background="#000000"
            android:textColor="#ffffff"
            android:layout_marginTop="50dp"
            android:onClick="clickFunction3"/>

    </LinearLayout>

</LinearLayout>
